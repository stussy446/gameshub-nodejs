doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        title Games Hub | A Collection of Games
        link(rel='stylesheet' href='css/style.css')
        link(rel='shortcut icon' type='image/png' href='/img/logo.png')
        link(rel='stylesheet'  href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
    body
        //- HEADER
        header.header 
            nav.nav.nav--tours 
                a.nav__el(href='#') All tours
            .header__logo 
                img(src='img/logo-white.png' alt='Natours logo')
            nav.nav.nav--user 
                a.nav__el(href='#') My Games 
                a.nav__el(href='#')
                    img.nav__user-img(src='img/user-1.jpg' alt='User photo')
                    span Steve 
                button.nav__el Log in
                button.nav__el.nev__el--cta Sign up 
        
        //- CONTENT
        section.main 
            h1= tour

        //- FOOTER 
        footer.footer
            .footer__logo 
                img(src='img/logo-green.png' alt='Natours logo')
            ul.footer__nav 
                li: a(href='#') About us
                li: a(href='#') Download apps
                li: a(href='#') Become Guide
                li: a(href='#') Careers
                li: a(href='#') Contact
                li: a(href='#') About us
